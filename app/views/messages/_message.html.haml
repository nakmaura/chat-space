.message
  .message__info
    .message__info__speaker
      = message.user.name
    .message__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-content
    - if message.content.present?
      %p.message-content__text
        = message.content
    = image_tag message.image.url,class: 'message-content__image' if message.image.present?

